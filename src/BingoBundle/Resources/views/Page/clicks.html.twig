{% extends 'BingoBundle::base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="jumbotron">
            <h1>{{ name }}!</h1>
            <p>TOP Klicks sortiert nach Zeit - die Neuesten zuerst!</p>
            <p>Auto update alle 6 Sekunden, kein neuladen der Seite n√∂tig ;)</p>
        </div>
    </div>
    <div class="container" ng-init="getClicks()" ng-controller="BingoClicksController" ng-cloak>
        <!--
        <div class="clearfix"></div>
        <pre>clicks: {[ clicks|json ]}</pre>
        <div class="clearfix"></div>
        -->

        <p class="alert alert-info" ng-hide="clicks.length > 0">No <strong>Clicks</strong> found!</p>

        <div class="clicks-list">
            <ul class="clicks-list-items">
                <li ng-repeat="click in clicks | orderBy: 'order'" class="animate-repeat">
                    <img src="/bundles/bingo/img/{[ click.card ]}.svg" style="width: 70px;height: auto"><br>
                    <span class="clicks-info"><strong><!--Karte: {[ click.card ]} - -->{[ click.clicks ]}</strong> Klicks</span>
                </li>
            </ul>
        </div>

